{
	"name": "smsgw-tester-web",
	"author": "CykaDave",
	"private": true,
	"version": "0.0.0",
	"main": "electron/electron.js",
	"scripts": {
		"dev": "vite",
		"build": "vite build",
		"serve": "vite preview",
		"electron": "wait-on tcp:5173 && cross-env IS_DEV=true electron .",
		"electron:pack": "electron-builder --dir",
		"electron:dev": "concurrently -k \"cross-env BROWSER=none yarn dev\" \"yarn electron\"",
		"electron:builder": "electron-builder",
		"build:for:electron": "vue-tsc --noEmit && cross-env ELECTRON=true vite build",
		"app:build": "yarn build:for:electron && yarn electron:builder",
		"pkg:server:windows": "pkg server.js --target node16-windows-x64 --output server.exe",
		"pkg:server:linux": "pkg server.js --target node16-linux-x64 --output server.exe"
	},
	"dependencies": {
		"@popperjs/core": "^2.11.8",
		"apexcharts": "^3.41.0",
		"body-parser": "^1.20.2",
		"bootstrap": "^5.3.0",
		"bootstrap-vue": "^2.23.1",
		"compressible": "^2.0.18",
		"compression": "^1.7.4",
		"express": "^4.18.2",
		"iconv": "^3.0.1",
		"iconv-lite": "^0.6.3",
		"nanotimer": "^0.3.15",
		"pako": "^2.1.0",
		"pkg": "^5.8.1",
		"safer-buffer": "^2.1.2",
		"smpp": "0.6.0-rc.4",
		"ts-node": "^10.9.1",
		"typescript": "^5.1.3",
		"vue": "^3.3.4",
		"vue-router": "^4.2.2",
		"vue3-apexcharts": "^1.4.1",
		"ws": "^8.13.0",
		"yarn": "^1.22.19",
		"zlib": "^1.0.5"
	},
	"devDependencies": {
		"@types/node": "^20.3.1",
		"@vitejs/plugin-vue": "^4.2.3",
		"body-parser": "^1.20.2",
		"compression": "^1.7.4",
		"concurrently": "^8.2.0",
		"cors": "^2.8.5",
		"cross-env": "^7.0.3",
		"electron": "^25.1.1",
		"electron-builder": "^24.4.0",
		"express": "^4.18.2",
		"nanotimer": "^0.3.15",
		"serve-static": "^1.15.0",
		"smpp": "0.6.0-rc.4",
		"ts-node": "^10.9.1",
		"typescript": "^5.1.3",
		"vite": "^4.3.9",
		"vue-tsc": "^1.6.5",
		"wait-on": "^7.0.1",
		"ws": "^8.13.0",
		"zlib": "^1.0.5"
	},
	"build": {
		"appId": "hr.cyka.smsgw-tester-web",
		"productName": "smsgw-tester-web",
		"nsis": {
			"oneClick": false,
			"allowToChangeInstallationDirectory": true
		},
		"files": [
			"dist/**/*",
			"electron/**/*"
		],
		"directories": {
			"buildResources": "assets",
			"output": "dist_electron"
		}
	}
}
