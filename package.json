{
	"name": "smsgw-tester-web",
	"author": "CykaDave",
	"private": true,
	"version": "0.0.0",
	"main": "electron/electron.js",
	"scripts": {
		"dev": "vite",
		"build": "vite build",
		"serve": "vite preview",
		"electron": "wait-on tcp:5173 && cross-env IS_DEV=true electron .",
		"electron:pack": "electron-builder --dir",
		"electron:dev": "concurrently -k \"cross-env BROWSER=none yarn dev\" \"yarn electron\"",
		"electron:builder": "electron-builder",
		"build:for:electron": "vue-tsc --noEmit && cross-env ELECTRON=true vite build",
		"app:build": "yarn build:for:electron && yarn electron:builder",
		"pkg:server": "pkg server.js --target node16-linux-x64 --output server.exe"
	},
	"dependencies": {
		"body-parser": "^1.20.2",
		"bootstrap": "^5.2.3",
		"bootstrap-vue": "^2.23.1",
		"express": "^4.18.2",
		"nanotimer": "^0.3.15",
		"smpp": "^0.6.0-rc.4",
		"vue": "^3.2.45",
		"vue-router": "^4.1.6",
		"ws": "^8.13.0",
		"yarn": "^1.22.19"
	},
	"devDependencies": {
		"@vitejs/plugin-vue": "^4.0.0",
		"concurrently": "^7.6.0",
		"cross-env": "^7.0.3",
		"electron": "^22.0.2",
		"electron-builder": "^23.6.0",
		"express": "^4.18.2",
		"serve-static": "^1.15.0",
		"vite": "^4.0.0",
		"vue-tsc": "^1.0.24",
		"wait-on": "^7.0.1"
	},
	"build": {
		"appId": "hr.cyka.smsgw-tester-web",
		"productName": "smsgw-tester-web",
		"nsis": {
			"oneClick": false,
			"allowToChangeInstallationDirectory": true
		},
		"files": [
			"dist/**/*",
			"electron/**/*"
		],
		"directories": {
			"buildResources": "assets",
			"output": "dist_electron"
		}
	}
}
